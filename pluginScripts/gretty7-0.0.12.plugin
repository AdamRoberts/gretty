buildscript {

  repositories {
    mavenLocal()
    mavenCentral()
  }

  apply plugin: 'maven'
  
  dependencies {
    classpath 'org.akhikhl.gretty:gretty7-plugin:0.0.12'
  }
}

repositories {
  mavenLocal()
  mavenCentral()
}

apply plugin: 'java'
apply plugin: 'war'

if (!project.plugins.findPlugin(org.akhikhl.gretty7.GrettyPlugin))
  project.apply(plugin: org.akhikhl.gretty7.GrettyPlugin)

System.err.println 'gretty7-0.0.12.plugin is deprecated, please use gretty.plugin instead'

