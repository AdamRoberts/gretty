buildscript {
  repositories {
    jcenter()
  }
  
  dependencies {
    classpath 'org.akhikhl.gretty:gretty-plugin:0.0.18'
  }
}

repositories {
  jcenter()
}

project.apply plugin: 'war'

if (!project.plugins.findPlugin(org.akhikhl.gretty.JettyPlugin))
  project.apply(plugin: org.akhikhl.gretty.JettyPlugin)


