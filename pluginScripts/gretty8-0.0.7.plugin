buildscript {

  repositories {
    mavenLocal()
    mavenCentral()
  }

  apply plugin: 'maven'
  
  dependencies {
    classpath 'org.akhikhl.gretty:gretty8-plugin:0.0.7'
  }
}

repositories {
  mavenLocal()
  mavenCentral()
}

apply plugin: 'java'
apply plugin: 'war'

if (!project.plugins.findPlugin(org.akhikhl.gretty8.GrettyPlugin))
  project.apply(plugin: org.akhikhl.gretty8.GrettyPlugin)

System.err.println 'gretty8-0.0.7.plugin is deprecated, please use gretty.plugin instead'

