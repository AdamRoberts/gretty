buildscript {
  repositories {
    jcenter()
  }
  
  dependencies {
    classpath 'org.akhikhl.gretty:gretty7-plugin:0.0.17'
  }
}

repositories {
  jcenter()
}

project.apply plugin: 'war'

if (!project.plugins.findPlugin(org.akhikhl.gretty7.GrettyPlugin))
  project.apply(plugin: org.akhikhl.gretty7.GrettyPlugin)

System.err.println 'gretty7-0.0.17.plugin is deprecated, please use gretty.plugin instead'

