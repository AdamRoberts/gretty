buildscript {
  repositories {
    jcenter()
  }
  
  dependencies {
    classpath 'org.akhikhl.gretty:gretty8-plugin:0.0.24'
  }
}

repositories {
  jcenter()
}

project.apply plugin: 'war'

// use `apply plugin: 'gretty8'` instead, when copying this script to "build.gradle"

if (!project.plugins.findPlugin(org.akhikhl.gretty8.JettyPlugin))
  project.apply(plugin: org.akhikhl.gretty8.JettyPlugin)

System.err.println 'gretty8-0.0.24.plugin is deprecated, please use gretty.plugin instead'

